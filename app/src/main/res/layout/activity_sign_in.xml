<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/purple"
    tools:context="com.example.johnny.a.sign_in">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="61dp"
        android:id="@+id/editText5"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold|italic"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Access id"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:id="@+id/editText6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textStyle="normal|bold|italic"
        android:ems="10"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:id="@+id/editText7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Dept"
        android:ems="10"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:id="@+id/editText8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Phone no"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/editText8"
        android:layout_alignStart="@+id/editText8"
        android:id="@+id/editText9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/editText9"
        android:layout_alignEnd="@+id/editText9"
        android:id="@+id/editText12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textStyle="normal|bold|italic"
        android:ems="10"
        android:hint="Confirm pass"
        android:layout_below="@+id/editText12"
        android:layout_alignStart="@+id/editText12"
        android:id="@+id/editText13" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText13"
        android:textStyle="normal|bold|italic"
        android:layout_alignStart="@+id/editText13"
        android:layout_marginTop="34dp"
        android:onClick="storedb"
        android:id="@+id/button7" />

    <Button
        android:text="Back"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:textStyle="normal|bold|italic"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7"
        android:layout_alignEnd="@+id/editText13"
        android:id="@+id/button8" />

</RelativeLayout>
